<div class="row no-gutters">
  <div class="col-xl-2">
    <h2>ユーザー</h2>
    <%= render partial: "groups/side_user_bar"%>
  </div>
  <div class="col-xl-7 cal">
    <h2>カレンダー</h2>
    <%= react_component("Calendar") %>
  </div>
  <div class="col-xl-3">
    <h2>タスク登録</h2>
