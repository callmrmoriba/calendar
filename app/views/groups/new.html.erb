<div class="container form">
  <div class="square">

    <h2>グループ作成</h2><br/>

    <%= form_with model: @group do |f| %>

      <div class="form-group">
        <%= f.label :グループ名 %></br>
        <%= f.text_field :name, class:"form_name", autofoucs: true, autocomplete: "name", placeholder: "グループ名を記入してください", class: 'form-control' %>
      </div>

      <div>
        <%= f.collection_check_boxes(:user_ids, User.all, :id, :nickname, class: 'form-control' ) do |b| %>
          <%= b.label { b.check_box + b.text } %>
        <% end %>
      </div><br/>

      <div class="form-group">
        <%= f.submit "登録", class: 'btn btn-primary' %>
        <input type="button" id="return" value="もどる" onclick="history.back()", class="btn btn-primary">
      </div>

    <% end %>

  </div>
</div>